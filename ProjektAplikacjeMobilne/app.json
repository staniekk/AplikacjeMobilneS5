{
  "expo": {
    "name": "Runners",
    "slug": "Runners",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#F4F7F8"
    },
    
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "Ta aplikacja wymaga dostępu do Twojego pedometru w celu śledzenia liczby kroków."
      }
    },
    "android": {
      "permissions": ["ACTIVITY_RECOGNITION"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F4F7F8"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
